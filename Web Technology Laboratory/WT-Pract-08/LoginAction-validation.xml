<!DOCTYPE validators PUBLIC
    "-//Apache Struts//XWork Validator 1.0.3//EN"
    "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
    <field name="user.name">
        <field-validator type="requiredstring">
            <message>Name is required</message>
        </field-validator>
    </field>
    
    <field name="user.mobile">
        <field-validator type="requiredstring">
            <message>Mobile number is required</message>
        </field-validator>
        <field-validator type="regex">
            <param name="expression"><![CDATA[^[0-9]{10}$]]></param>
            <message>Mobile number must be 10 digits</message>
        </field-validator>
    </field>
    
    <field name="user.email">
        <field-validator type="requiredstring">
            <message>Email is required</message>
        </field-validator>
        <field-validator type="email">
            <message>Please enter a valid email address</message>
        </field-validator>
    </field>
</validators>